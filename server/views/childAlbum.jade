extends ./includes/layout.jade

block content
    div#childAlbum
        header #{album.title}
        section#pictrues
            if album.pictures
                p There are not any pictrue in this album. 
                    a(href="#", target="_blank" id="adderButton") Add some?
        div#addPicture
            form(action='./addPicture', method='post')
                label
                    |请选择图片:
                    input(type="file")
                button.btn(type="submit") 添加
