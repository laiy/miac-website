doctype html
html
    head
        title index
        script(src='/lib/jquery.js')
        script(src='/bin/js/album.js')
        script(src='/bin/js/header.js')
        script(src='/lib/bootstrap/js/bootstrap.min.js')
        meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
        link(rel="stylesheet", href="/bin/css/album.css")
        link(rel="stylesheet", href="/bin/css/header.css")
        link(rel="stylesheet", href="/lib/bootstrap/css/bootstrap.min.css")
    body
        header
            include ./includes/header.jade
        div#album
            header 相册
            div#album-search
                form(action='#').input-group.navbar-search
                    input(type="text", name="title", placeholder="输入关键词搜索相册").search-query
                    button(type="submit").btn search
                button(type="button", onclick="window.open('album/createAlbum')").btn.submit 创建新相册
            br
            div#content
                for album in albums
                    div.pic
                        span #{album.title}
                        img.cover(src='assets/img/album/' + album.title + '/' + album.cover, onclick="window.open('./album/' + " + "\'" + (album._id) + "\'" + ")")
        footer
