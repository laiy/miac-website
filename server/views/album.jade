doctype html
html
    head
        title album
        script(src='../lib/jquery.js')
        link(href='/bin/css/header.css', rel='stylesheet')
        script(src='/bin/js/header.js')
    body
        include ./includes/header.jade
        if user
            a(href='/Album/createAlbum') createNew
        if albums
            each album in albums
                br
                p title:
                    a(href='/Album/' + album._id)=album.title
                p cratedAt:
                    span=album.createdAt
                p createdBy:
                    span=album.createdBy
                p pictures:
                    span=album.pictures
                p cover
                img(src= '/assets/img/album/' + album.title + '/' + album.cover alt='cover')
