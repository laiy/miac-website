doctype html
html
    head
        title article
        script(src='./lib/jquery.js')
        link(href='/bin/css/header.css', rel='stylesheet')
        script(src='/bin/js/header.js')
    body
        include ./includes/header.jade
        if user
            a(href='/Article/create') createNew
        if articles
            each article in articles
                br
                p category:
                    span=article.category
                p title:
                    a(href='/Article/' + article._id)=article.title
                p content:
                    span=article.content
                p createdBy:
                    span=article.createdBy
                p cratedAt:
                    span=moment(article.cratedAt).format('MMM D,YY')

