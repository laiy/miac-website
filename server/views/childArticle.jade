doctype html
html
    head
        title index
        script(src='/lib/jquery.js')
        script(src='/bin/js/childArticle.js')
        script(src='/bin/js/header.js')
        script(src='/lib/bootstrap/js/bootstrap.min.js')
        meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
        link(rel="stylesheet", href="/bin/css/childArticle.css")
        link(rel="stylesheet", href="/bin/css/header.css")
        link(rel="stylesheet", href="/lib/bootstrap/css/bootstrap.min.css")
    body
        header
            include ./includes/header.jade
        div#childArticle
            div#container
                div#pack
                    div#content
                        header #{article.title}
                        p !{article.content}
                        footer Created by 
                           span #{article.createdBy} 
                           | at 
                           span
                               | #{moment(article.createAt).format('MMM D,YY')}
                        div#write-comment
                            | Say something here:
                            form#comment(mothod='POST', action='')
                                textarea.text(type='text' name='content' form="comment")
                                input#comment-submit.btn.comment-submit(type='submit' value='submit')
                            br 
                div#comments
                   if comments
                       each comment in comments
                            div.comment-block(name=comment._id)
                                img(src="./src/img/us.img").user-image
                                p.words !{comment.content}
                                p.type #{comment.type}
                                p.footer #{comment.createdBy} commented at #{moment(comment.createdAt).format('MMM D,YY')}
                                div#say-sth
                                    form(action= '')
                                        input.text(type='text' name='content')
                                        input(type='submit' value='submit')
                                div.replys
                                    each reply in comment.replys
                                         div(name=reply._id).reply-block
                                         
                                            p.words #{reply.content}
                                            p.type type: #{reply.type}
                                            p.footer #{reply.createdBy} replyed at #{moment(reply.createdAt).format('MMM D,YY')}
        footer
            p#writer Copyright Â©2014 MIAC